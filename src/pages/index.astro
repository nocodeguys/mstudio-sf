---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";
import heroImage from "@images/hero-image.avif";
import heroImage2 from "@images/maciej.jpg";
import faqs from "@data/pl/faqs.json";
import features from "@data/pl/features.json";
import pricing from "@data/pl/pricing.json";
import featureImage from "@images/features-image.avif";
import construction from "@images/construction-image.avif";
import tools from "@images/automated-tools.avif";
import dashboard from "@images/dashboard-image.avif";
import { getRelativeLocaleUrl } from "astro:i18n";
import { partnersData } from "@/data_files/constants";

const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];

const docsUrl = getRelativeLocaleUrl("pl", "guides");
---

<MainLayout title="ScrewFast: Narzędzia Budowlane, Sprzęt i Usługi" lang="pl">
  <AnnouncementBanner
    btnId="dismiss-button"
    btnTitle="Sprawdź ScrewFast na GitHub"
    url="https://github.com/mearashadowfax/ScrewFast"
  />

  <HeroSection
    title=`Stwórzmy <span
        class="text-yellow-500 dark:text-yellow-400"> design, stronę, produkt</span> który opowie Twoją historię` 
    subTitle="Studio designu, gdzie projektuję z osobistym akcentem, który konwertuje, angażuje i zostaje w pamięci."
    primaryBtn="Jak mogę pomóc?"
    primaryBtnURL="/products"
    secondaryBtn="Poznajmy się"
    secondaryBtnURL="/contact"
    withReview={false}
    avatars={avatarSrcs}
    rating=`<span class="font-bold">4.8</span> / 5`
    starCount={4}
    reviews=`Z Ponad <span class="font-bold">12.8k</span> Opinii`
    src={heroImage2}
    alt="Stos produktów ScrewFast zawierających różnorodne narzędzia sprzętowe"
  />

  <ClientsSection
    title="Zaufali nam Liderzy Branży"
    subTitle="Doświadcz niezawodności wybranej przez gigantów branży."
    partners={partnersData}
  />

  <FeaturesGeneral
    title="Spełniamy Wymagania Branży"
    subTitle="W ScrewFast podejmujemy unikalne wyzwania napotykane w sektorach sprzętu i budownictwa. Od najnowocześniejszych narzędzi po fachowe usługi, jesteśmy zaangażowani w pomoc w pokonywaniu przeszkód i osiąganiu celów."
    src={featureImage}
    alt="Produkty ScrewFast w unoszących się pudełkach"
    features={features}
  />

  <FeaturesNavs
    title=`Dostosuj ofertę <span class="text-yellow-500 dark:text-yellow-400">ScrewFast</span>, aby idealnie odpowiadała Twoim potrzebom sprzętowym i budowlanym.`
    tabs={[
      {
        heading: "Najnowocześniejsze Narzędzia",
        content:
          "Wzmocnij swoje projekty dzięki najnowocześniejszym narzędziom ScrewFast. Doświadcz zwiększonej wydajności w zarządzaniu budową dzięki naszym zaawansowanym zautomatyzowanym rozwiązaniom.",
        svg: "tools",
        src: tools,
        alt: "Żółty i czarny ciężki sprzęt na brązowym trawiastym polu",
        first: true,
      },
      {
        heading: "Intuicyjne Panele",
        content:
          "Nawiguj z łatwością dzięki intuicyjnym panelom ScrewFast. Konfiguruj i nadzoruj swoje projekty bez wysiłku, dzięki przyjaznym dla użytkownika interfejsom zaprojektowanym do szybkiego i skutecznego zarządzania przepływem pracy.",
        svg: "dashboard",
        src: dashboard,
        alt: "Zrzut ekranu lub graficzna reprezentacja intuicyjnego panelu",
        second: true,
      },
      {
        heading: "Solidne Funkcje",
        content:
          "Zminimalizuj złożoność, zmaksymalizuj produktywność. Solidne funkcje ScrewFast są zaprojektowane tak, aby usprawnić proces budowy, dostarczając wyniki, które wyróżniają się doskonałością.",
        svg: "house",
        src: construction,
        alt: "Szara metalowa rama budynku w pobliżu żurawia wieżowego w ciągu dnia",
      },
    ]}
  />

  <TestimonialsSection
    title="Przyspiesz Swoje Projekty"
    subTitle="W ScrewFast zapewniamy szybki start dzięki natychmiastowej konfiguracji konta. Doświadcz na nowo zdefiniowanej szybkości w budownictwie."
    testimonials={[
      {
        content:
          "ScrewFast dramatycznie zwiększył wydajność naszego projektu. Konfiguracja była natychmiastowa, a ich szybki czas reakcji jest fenomenalny. Prawdziwy przełom we wsparciu sprzętowym i budowlanym!",
        author: "Samantha Ruiz",
        role: "Dyrektor Operacyjny | ConstructIt Inc.",
        avatarSrc:
          "https://images.unsplash.com/photo-1593104547489-5cfb3839a3b5?q=80&w=1453&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D8&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
      },
    ]}
    statistics={[
      {
        count: "70k+",
        description:
          "wyposażonych klientów — od DIY po duże firmy budowlane",
      },
      {
        count: "35%",
        description:
          "wzrost wydajności projektu dzięki narzędziom i usługom ScrewFast",
      },
      {
        count: "15.3%",
        description:
          "redukcja kosztów konserwacji zgłoszona przez długoterminowych klientów",
      },
      {
        count: "2x",
        description: "szybszy montaż dzięki innowacyjnym rozwiązaniom mocującym",
      },
    ]}
  />

  <PricingSection pricing={pricing} />

  <FAQ title="Często<br />zadawane pytania" faqs={faqs} />

  <HeroSectionAlt
    title="Budujmy Razem"
    subTitle="ScrewFast to szablon open-source, starannie stworzony z wykorzystaniem frameworków Astro, Tailwind CSS i Preline UI."
    url="https://github.com/mearashadowfax/ScrewFast"
  />
</MainLayout>
